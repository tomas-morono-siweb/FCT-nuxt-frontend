{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "types": [
            "vitest/globals",
            "@vue/test-utils",
            "happy-dom"
        ],
        "lib": [
            "ES2020",
            "DOM"
        ],
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true
    },
    "include": [
        "**/*.ts",
        "**/*.vue",
        "../app/**/*.ts",
        "../app/**/*.vue"
    ]
}